.lang-icon {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 48px;
  height: 48px;
  background-size: 48px 48px;
}

.ruby-lang {
  background-image: url(<%= asset_path("icons/ruby-grey.png") %>);
}
.php-lang {
  background-image: url(<%= asset_path("icons/php-grey.png") %>);
}
.nodejs-lang {
  background-image: url(<%= asset_path("icons/nodejs-grey.png") %>);
}
.js-lang {
  background-image: url(<%= asset_path("icons/js-grey.png") %>);
}
.python-lang {
  background-image: url(<%= asset_path("icons/python-grey.png") %>);
}

.box:hover {
  a.service-logo {
    i.ruby-lang {
      background-image: url(<%= asset_path("icons/ruby-white.png") %>);
    }
    i.php-lang {
      background-image: url(<%= asset_path("icons/php-white.png") %>);
    }
    i.nodejs-lang {
      background-image: url(<%= asset_path("icons/nodejs-white.png") %>);
    }
    i.js-lang {
      background-image: url(<%= asset_path("icons/js-white.png") %>);
    }
    i.python-lang {
      background-image: url(<%= asset_path("icons/python-white.png") %>);
    }
  }
}